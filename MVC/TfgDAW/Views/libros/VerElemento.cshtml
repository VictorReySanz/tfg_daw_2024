                    @*Ver archivo*@
                    //ARCHIVO
                    <div id="pdf-viewer" class="animate__animated animate__slow animate__backInLeft"></div>
                    <script>
const url = '@Url.Action("VerArchivo", "Libros", new { id = item.libro_id })';

                    const pdfjsLib = window['pdfjs-dist/build/pdf'];

                    let currentPage = 1; // PÃ¡gina actual

                    const viewer = document.getElementById('pdf-viewer');

                    function renderPage(pageNum) {
                        pdfjsLib.getDocument(url).promise.then(function(pdf) {
                            pdf.getPage(pageNum).then(function(page) {
                                const scale = 1.5;
                                const viewport = page.getViewport({ scale: scale });

                                const canvas = document.createElement('canvas');
                                canvas.className = 'pdf-page';
                                viewer.innerHTML = ''; // Limpiar el visor antes de agregar la nueva pÃ¡gina
                                viewer.appendChild(canvas);

                                const context = canvas.getContext('2d');
                                canvas.height = viewport.height;
                                canvas.width = viewport.width;

                                const renderContext = {
                canvasContext: context,
                viewport: viewport
                                };
                            page.render(renderContext);
                        });
                    });
}

                // FunciÃ³n para ir a la pÃ¡gina anterior
                function goToPreviousPage() {
                    if (currentPage > 1) {
                        currentPage--;
                        renderPage(currentPage);
                    }
                }

                // FunciÃ³n para ir a la pÃ¡gina siguiente
                function goToNextPage() {
                    pdfjsLib.getDocument(url).promise.then(function(pdf) {
                        if (currentPage < pdf.numPages) {
                            currentPage++;
                            renderPage(currentPage);
                        }
                    });
                }

                // Llamamos a renderPage para mostrar la primera pÃ¡gina
                renderPage(currentPage);
                    </script>
