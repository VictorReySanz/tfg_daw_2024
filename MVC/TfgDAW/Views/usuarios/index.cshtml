@{@model TfgDAW.Models.Usuarios
ViewData["Title"] = "Inicio Sesion";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css">
</head>
<body>
    <div class="login-container">
        <img class="logo" src="~/Content/imgs/shareenjoylogo.png" alt="Imagen de ejemplo" />

        @using (Html.BeginForm("EnviarFormulario", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="nombre">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "inputs", placeholder = "nombre", maxlength = "100" } })
            </div>
            <div class="email">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "inputs", placeholder = "correo", maxlength = "100" } })
            </div>

            <div class="pass">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "inputs", placeholder = "pass", maxlength = "100" } })
            </div>
            <input class="boton" type="submit" value="INICIAR SESIÓN" />
        }
        <div class="crear-cuenta">
            <p>¿Aun no tienes cuenta? <a href="@Url.Action("Registro", "Usuarios")"><b>CREAR CUENTA</b></a></p>
        </div>

    </div>
</body>
</html>

