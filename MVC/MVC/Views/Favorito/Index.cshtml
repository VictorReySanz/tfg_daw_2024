@model IEnumerable<MVC.Models.Favorito>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoOpcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opcion1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpcionNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoOpcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opcion.CvId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opcion1.LibroId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpcionNavigation.JuegoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.UsuarioId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoritoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoritoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoritoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
